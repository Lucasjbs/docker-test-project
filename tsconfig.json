{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}